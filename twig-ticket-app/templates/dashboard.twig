{% extends "_layout.twig" %}

{% block content %}
<div class="main-content app-container">
  <h2>Dashboard</h2>
  <p>Welcome back, {{ auth.user.name }}! Here's your summary.</p>
  <div class="deco-circle deco-circle-2"></div>
  <div class="grid-3" style="margin-top: 2rem">
    <div class="box">
      <h3>Total Tickets</h3>
      <p style="font-size: 2rem; font-weight: 700">{{ stats.total }}</p>
    </div>
    <div class="box">
      <h3>Open Tickets</h3>
      <p style="font-size: 2rem; font-weight: 700">{{ stats.open }}</p>
    </div>
     <div class="box">
      <h3>Resolved</h3>
      <p style="font-size: 2rem; font-weight: 700">{{ stats.closed }}</p>
    </div>
  </div>
</div>
{% endblock %}